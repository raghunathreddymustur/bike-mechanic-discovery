# Environment Variables for Docker Compose
# Copy this file to .env and fill in your values

# MongoDB Connection String (from MongoDB Atlas)
MONGO_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/bike-mechanic-auth?retryWrites=true&w=majority&appName=BikeMechanicUserData

# JWT Secret (change in production!)
JWT_SECRET=bike-mechanic-super-secret-key-change-in-production

# Email Service (Brevo) - Optional
EMAIL_ENABLED=false
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@bikemechanic.com

# SMS Service (TextBee) - Optional
SMS_ENABLED=false
TEXTBEE_URL=
TEXTBEE_API_KEY=
